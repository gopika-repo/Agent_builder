# Environment Configuration
# Copy this file to .env and fill in your values

# LLM API Configuration (choose one)
GROQ_API_KEY=your_groq_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Model Selection
LLM_PROVIDER=groq  # or anthropic
LLM_MODEL=llama-3.3-70b-versatile  # Free tier! Other options: mixtral-8x7b-32768, gemma2-9b-it

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=  # Optional, for cloud Qdrant

# Embedding Models
TEXT_EMBEDDING_MODEL=all-MiniLM-L6-v2
IMAGE_EMBEDDING_MODEL=openai/clip-vit-base-patch32

# Computer Vision (YOLO) Configuration
YOLO_MODEL_PATH=yolov8n.pt  # Options: yolov8n.pt, yolov8s.pt, yolov8m.pt, yolov8l.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# OCR Configuration
OCR_ENGINE=hybrid  # Options: tesseract, easyocr, hybrid
OCR_LANGUAGES=en  # Comma-separated: en,es,fr,de

# Document Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff

# Confidence Thresholds
LOW_CONFIDENCE_THRESHOLD=0.6
HUMAN_REVIEW_THRESHOLD=0.7

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Storage
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
